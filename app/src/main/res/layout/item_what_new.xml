<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="events"
            type="com.example.kotlin_starbucks.model.HomeEvents.HomeEventsContents" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_what_new_image"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            homeContentsImageUrl="@{events.mobTHUM}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_what_new_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            style="@style/Subtitle1.14.bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{events.title}"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toEndOf="@+id/iv_what_new_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="서머3 프로모션" />

        <TextView
            android:id="@+id/tv_what_new_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@{events.endDT}"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/iv_what_new_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_what_new_title"
            tools:text="서머3 프로모션" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>